WindowManager:
    WelcomeWindow:
    GameWindow:

<MDFlatButton>:
    font_name: "DejaVuSans"
    font_size: 50
    theme_text_color: "Custom"
    text_color: "black"

<MDFlatButton>:
    font_name: "DejaVuSans"
    font_size: 50
    theme_text_color: "Custom"
    text_color: "black"

<DefButton@MDFillRoundFlatButton>: # DefaultButton!
    #on_release: app.play_btn_sound()

<WelcomeWindow>:
    name: "WelcomeWindow"

    Label:
        font_size: root.width//10
        size_hint: 0.3, 0.2
        pos_hint: {"center_x": 0.5, "top": 0.9}
        halign: "center"
        text: "Chess"
    
    Label:
        font_size: root.width//40
        size_hint: 0.2, 0.1
        pos_hint: {"center_x": 0.5, "top": 0.7}
        text: "By kitkat3141"

    DefButton:
        size_hint: 0.35, 0.2
        font_size: root.width//20 if root.width > root.height else root.height//20
        pos_hint: {"center_x": 0.5, "center_y": 0.4}
        text: "Play"
        on_release:
            app.root.current = "GameWindow"
            root.manager.transition.direction = "left"
            #root.init_game()


<GameWindow>:
    name: "GameWindow"